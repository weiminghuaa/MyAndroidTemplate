<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#212121"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="@dimen/actionbar_height"
        android:gravity="center"
        android:background="#212121"
        android:padding="5dp"
        >
    <ImageView android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:src="@drawable/icon_default_head_circle"
        android:gravity="center"
        android:textColor="@color/white"
        />   
    <TextView android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_weight="1"
        android:text="登录"
        android:textSize="@dimen/text_h2"
        android:textColor="@color/text_color_white"
        android:id="@+id/right_text_no_login"
        android:gravity="center"
        android:background="@drawable/button_grey"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center"
        android:visibility="gone"
        />
    <TextView android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_weight="2"
        android:text="Gao Binlin"
        android:textSize="@dimen/text_h2"
        android:textColor="@color/text_color_white"
        android:id="@+id/right_text_login"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center"
        />
    <TextView android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_weight="1"
        android:text="注册"
        android:textSize="@dimen/text_h2"
        android:textColor="@color/text_color_white"
        android:id="@+id/right_text_register"
        android:gravity="center"
        android:background="@drawable/button_grey"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:visibility="gone"
        />
    <TextView android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_weight="1.2"
        android:text="退出"
        android:textSize="@dimen/text_h2"
        android:textColor="@color/text_color_white"
        android:id="@+id/right_text_quit"
        android:gravity="center"
        android:background="@drawable/button_grey"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="5dp"
        
        />   
    </LinearLayout>
    
    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="绑定手机"
        android:id="@+id/right_text_bind"       
        android:textSize="@dimen/text_h2"
        android:paddingLeft="15dp"
        android:textColor="@color/text_color_white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/left_nav_spiltchoose"
        />
    <ListView android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none"
        android:scrollingCache="false"
        android:cacheColorHint="#00000000"
        android:drawSelectorOnTop="false"
        android:focusable="true"
        android:listSelector="#00ffffff"
        android:dividerHeight="1dp"
        android:divider="@drawable/spiltline"
        android:id="@+id/right_my_listview"
        android:layout_marginLeft="10dp">        
    </ListView>

</LinearLayout>