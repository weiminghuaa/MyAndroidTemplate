<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/size_h3"
    android:paddingRight="@dimen/size_h3" >

    <include layout="@layout/index_list_item_header_content" />

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_h3"
        android:layout_marginTop="@dimen/size_h3"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/index_content" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <ImageView
            android:layout_width="@dimen/index_image_size2"
            android:layout_height="@dimen/index_image_size2"
            android:background="@drawable/iconshare_weixin" />

        <TextView
            style="@style/TextAppearance.four.blue"
            android:layout_marginLeft="@dimen/size_h4"
            android:text="6323èµž" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <ImageView
            android:layout_width="@dimen/index_image_size2"
            android:layout_height="@dimen/index_image_size2"
            android:background="@drawable/iconshare_weixin"
            android:visibility="invisible" />

        <TextView
            style="@style/TextAppearance.four.blue"
            android:layout_marginLeft="@dimen/size_h4"
            android:text="weiminghua" />

        <TextView
            style="@style/TextAppearance.four.gray"
            android:layout_marginLeft="@dimen/size_h5"
            android:text="this is good" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <ImageView
            android:layout_width="@dimen/index_image_size2"
            android:layout_height="@dimen/index_image_size2"
            android:background="@drawable/iconshare_weixin"
            android:visibility="invisible" />

        <TextView
            style="@style/TextAppearance.four.blue"
            android:layout_marginLeft="@dimen/size_h4"
            android:text="weiminghua" />

        <TextView
            style="@style/TextAppearance.four.gray"
            android:layout_marginLeft="@dimen/size_h5"
            android:text="this is good" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <ImageView
            android:layout_width="@dimen/index_image_size2"
            android:layout_height="@dimen/index_image_size2"
            android:background="@drawable/iconshare_weixin"
            android:visibility="invisible" />

        <TextView
            style="@style/TextAppearance.four.blue"
            android:layout_marginLeft="@dimen/size_h4"
            android:text="weiminghua" />

        <TextView
            style="@style/TextAppearance.four.gray"
            android:layout_marginLeft="@dimen/size_h5"
            android:text="this is good" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_h3" >

        <ImageButton
            android:id="@+id/btn1"
            android:layout_width="@dimen/index_button_size"
            android:layout_height="@dimen/index_button_size"
            android:background="@drawable/button_grey"
            android:src="@drawable/icon_qjj_follow" />

        <ImageButton
            android:layout_width="@dimen/index_button_size"
            android:layout_height="@dimen/index_button_size"
            android:layout_marginLeft="@dimen/size_h3"
            android:layout_toRightOf="@+id/btn1"
            android:background="@drawable/button_grey"
            android:src="@drawable/icon_qjj_pk" />

        <ImageButton
            android:layout_width="@dimen/index_button_size"
            android:layout_height="@dimen/index_button_size"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/size_h3"
            android:background="@drawable/trans"
            android:src="@drawable/blue_add" />
    </RelativeLayout>

